<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="xh.zero.tadpolestory.ui.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit"/>
        <action
            android:id="@+id/action_mainFragment_to_filterFragment"
            app:destination="@id/filterFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <action
            android:id="@+id/action_mainFragment_to_rankFragment"
            app:destination="@id/rankFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <action
            android:id="@+id/action_mainFragment_to_dayRecommendFragment"
            app:destination="@id/dayRecommendFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <action
            android:id="@+id/action_mainFragment_to_guessLikeFragment"
            app:destination="@id/guessLikeFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="xh.zero.tadpolestory.ui.album.AlbumDetailFragment"
        android:label="AlbumDetailFragment" >
        <action
            android:id="@+id/action_albumDetailFragment_to_albumRichIntroFragment"
            app:destination="@id/albumRichIntroFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <argument
            android:name="album"
            app:argType="xh.zero.tadpolestory.repo.data.Album" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="xh.zero.tadpolestory.ui.serach.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <argument
            android:name="tagName"
            app:argType="string" />
        <argument
            android:name="categoryId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/rankFragment"
        android:name="xh.zero.tadpolestory.ui.rank.RankFragment"
        android:label="fragment_rank"
        tools:layout="@layout/fragment_rank" >
        <action
            android:id="@+id/action_rankFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <argument
            android:name="categoryId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="xh.zero.tadpolestory.ui.serach.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <argument android:name="categoryId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/albumRichIntroFragment"
        android:name="xh.zero.tadpolestory.ui.album.AlbumRichIntroFragment"
        android:label="fragment_album_rich_intro"
        tools:layout="@layout/fragment_album_rich_intro" >
        <argument
            android:name="albumRichInfo"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dayRecommendFragment"
        android:name="xh.zero.tadpolestory.ui.home.RecommendFragment"
        android:label="fragment_day_recommend"
        tools:layout="@layout/fragment_day_recommend" >
        <action
            android:id="@+id/action_dayRecommendFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
        <argument android:name="categoryId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/guessLikeFragment"
        android:name="xh.zero.tadpolestory.ui.home.GuessLikeFragment"
        android:label="GuessLikeFragment" >
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <action
            android:id="@+id/action_guessLikeFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
    </fragment>
</navigation>