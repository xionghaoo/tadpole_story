<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="xh.zero.tadpolestory.ui.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit"/>
        <action
            android:id="@+id/action_mainFragment_to_filterFragment"
            app:destination="@id/filterFragment"
            app:enterAnim="@anim/page_enter"
            app:popExitAnim="@anim/page_exit" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="xh.zero.tadpolestory.ui.album.AlbumDetailFragment"
        android:label="AlbumDetailFragment" >
        <argument
            android:name="albumId"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="totalCount"
            app:argType="long" />
        <argument
            android:name="albumTitle"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="xh.zero.tadpolestory.ui.serach.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" >
        <action
            android:id="@+id/action_filterFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
    </fragment>
</navigation>