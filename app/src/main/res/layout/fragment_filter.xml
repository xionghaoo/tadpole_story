<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.serach.FilterFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_106dp"
        android:layout_height="@dimen/_88dp"
        android:src="@mipmap/ic_back"
        android:layout_marginTop="@dimen/_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="儿童故事"
        android:textStyle="bold"
        android:textColor="@color/color_0A1A2A"
        android:textSize="@dimen/_30sp"
        android:layout_marginStart="@dimen/_32dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_width"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <HorizontalScrollView
        android:id="@+id/container_ll_tag_list"
        android:layout_width="0dp"
        android:layout_height="@dimen/_52dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_132dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">
        <LinearLayout
            android:id="@+id/ll_tag_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <xh.zero.core.widgets.NetworkStateLayout
        android:id="@+id/container_rc_albums_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_82dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView9" >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_album_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </xh.zero.core.widgets.NetworkStateLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:paddingStart="@dimen/_132dp"
        android:paddingEnd="@dimen/_46dp"
        android:paddingTop="@dimen/_20dp"
        android:paddingBottom="@dimen/_20dp"
        android:orientation="vertical"
        android:background="@color/color_main_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_ll_tag_list" >

        <LinearLayout
            android:id="@+id/container_filter_calc"
            android:layout_width="0dp"
            android:layout_height="@dimen/_42dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/btn_filter_expand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:id="@+id/container_filter_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_filter_calc"/>

        <LinearLayout
            android:id="@+id/btn_filter_expand"
            android:layout_width="@dimen/_98dp"
            android:layout_height="@dimen/_38dp"
            app:layout_constraintBottom_toTopOf="@+id/container_filter_other"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_filter_expand"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <ImageView
                android:id="@+id/iv_filter_expand"
                android:layout_width="@dimen/_32dp"
                android:layout_height="@dimen/_32dp"
                android:src="@mipmap/ic_filter_collapse"/>
            <TextView
                android:id="@+id/tv_filter_expand_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sp"
                android:textColor="@color/color_9B9B9B"
                tools:text="展开"
                android:layout_marginStart="@dimen/_4dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_width"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>