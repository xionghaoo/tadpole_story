<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.serach.FilterFragment">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_106dp"
        android:layout_height="@dimen/_88dp"
        android:src="@mipmap/ic_back"
        android:layout_marginTop="@dimen/_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="儿童故事"
        android:textStyle="bold"
        android:textColor="@color/color_0A1A2A"
        android:textSize="@dimen/_30sp"
        android:layout_marginStart="@dimen/_32dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_width"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <HorizontalScrollView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="@dimen/_52dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_132dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">
        <LinearLayout
            android:id="@+id/ll_tag_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_albums_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <LinearLayout
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:paddingStart="@dimen/_132dp"
        android:paddingEnd="@dimen/_46dp"
        android:paddingTop="@dimen/_20dp"
        android:paddingBottom="@dimen/_20dp"
        android:orientation="vertical"
        android:background="@color/color_main_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_42dp"
                android:textColor="@color/color_9B9B9B"
                android:textSize="@dimen/_20sp"
                android:gravity="center"
                android:text="综合排序"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/container_search_tags_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200dp"
            android:orientation="vertical"
            android:background="@color/color_0A1A2A"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_width"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>