<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background"
    tools:context=".ui.serach.SearchFragment">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_106dp"
        android:layout_height="@dimen/_88dp"
        android:src="@mipmap/ic_back"
        android:layout_marginTop="@dimen/_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_search_bg"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back" >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_34dp"
            android:layout_height="@dimen/_34dp"
            android:layout_marginStart="@dimen/_32dp"
            android:src="@mipmap/ic_search_34"/>
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_16dp"
            android:background="@null"/>
       <ImageView
           android:id="@+id/iv_clear"
           android:layout_width="@dimen/_34dp"
           android:layout_height="@dimen/_34dp"
           android:layout_marginStart="@dimen/_10dp"
           android:src="@mipmap/ic_clear_34"/>
        <View
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_7dp"
            android:layout_marginBottom="@dimen/_7dp"
            android:layout_marginStart="@dimen/_20dp"
            android:background="@color/color_E5EAF3"/>

        <TextView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:gravity="center"
            android:paddingStart="@dimen/_30dp"
            android:paddingEnd="@dimen/_34dp"
            android:textColor="@color/color_FF9F00"
            android:textSize="@dimen/_28sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_width"
        android:background="@color/color_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_album_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ScrollView
        android:id="@+id/container_search_recommend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索记录"
                    android:textColor="@color/color_07070D"
                    android:textSize="@dimen/_28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_122dp"
                    android:layout_marginTop="@dimen/_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <HorizontalScrollView
                    android:id="@+id/textView21"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42dp"
                    android:layout_marginEnd="@dimen/_168dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView15"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"/>
                </HorizontalScrollView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/textView23"
                    android:layout_width="@dimen/_34dp"
                    android:layout_height="@dimen/_34dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginEnd="@dimen/_78dp"
                    android:src="@mipmap/ic_clear_history_34"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_153dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热搜推荐"
                    android:textColor="@color/color_07070D"
                    android:textSize="@dimen/_28sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_122dp"
                    android:layout_marginTop="@dimen/_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <HorizontalScrollView
                    android:id="@+id/textView25"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginEnd="@dimen/_168dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scrollbars="none"
                    app:layout_constraintStart_toStartOf="@+id/textView24"
                    app:layout_constraintTop_toBottomOf="@+id/textView24" >
                    <LinearLayout
                        android:id="@+id/ll_hot_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"/>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_width"
                android:background="@color/color_divider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>