<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@color/color_main_background"
    android:gravity="center">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/_216dp"
        android:layout_height="0dp"
        android:background="@color/white_62"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="@dimen/_106dp"
        android:layout_height="@dimen/_88dp"
        android:src="@mipmap/ic_home_button"
        android:layout_marginTop="@dimen/_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_48dp"
        android:layout_marginStart="@dimen/_147dp"
        android:layout_marginEnd="@dimen/_24dp"
        android:background="@drawable/shape_search"
        app:layout_constraintBottom_toBottomOf="@+id/btn_home"
        app:layout_constraintEnd_toStartOf="@+id/btn_filter"
        app:layout_constraintStart_toEndOf="@+id/btn_home"
        app:layout_constraintTop_toTopOf="@+id/btn_home" >
        <ImageView
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_gravity="center_vertical|end"
            android:src="@android:color/holo_blue_bright"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/btn_filter"
        android:layout_width="@dimen/_58dp"
        android:layout_height="@dimen/_58dp"
        android:layout_marginEnd="@dimen/_52dp"
        android:src="@mipmap/ic_filter_button"
        app:layout_constraintBottom_toBottomOf="@+id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_home" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_home_menu_1"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:src="@mipmap/ic_home_menu_1"
        android:layout_marginTop="@dimen/_22dp"
        android:layout_marginStart="@dimen/_58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_home" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="儿童故事"
        android:layout_marginTop="@dimen/_4dp"
        android:textSize="@dimen/_18sp"
        android:textColor="@color/color_FF6C6C"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_1"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_home_menu_2"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:src="@mipmap/ic_home_menu_2"
        android:layout_marginTop="@dimen/_66dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_1"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="少儿素养"
        android:textSize="@dimen/_18sp"
        android:textColor="@color/color_07070D"
        android:layout_marginTop="@dimen/_4dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_2"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_home_menu_3"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:layout_marginTop="@dimen/_66dp"
        android:src="@mipmap/ic_home_menu_3"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_2"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:text="更多"
        android:textSize="@dimen/_18sp"
        android:textColor="@color/color_07070D"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_3"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_3" />

    <HorizontalScrollView
        android:id="@+id/ll_tag_list_container"
        android:layout_width="0dp"
        android:layout_height="@dimen/_52dp"
        android:layout_marginTop="@dimen/_14dp"
        android:orientation="horizontal"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/btn_home" >
        <LinearLayout
            android:id="@+id/ll_tag_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_90dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ll_tag_list_container"
        app:layout_constraintTop_toBottomOf="@+id/ll_tag_list_container" >
        <LinearLayout
            android:id="@+id/ll_content_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>