<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@color/color_main_background"
    android:gravity="center">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="@dimen/_216dp"
        android:layout_height="0dp"
        android:background="@color/white_62"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="@dimen/_106dp"
        android:layout_height="@dimen/_88dp"
        android:src="@mipmap/ic_home_button"
        android:layout_marginTop="@dimen/_48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_home_menu_1"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:src="@mipmap/ic_home_menu_1_selected"
        android:layout_marginTop="@dimen/_22dp"
        android:layout_marginStart="@dimen/_58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_home" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="儿童故事"
        android:layout_marginTop="@dimen/_4dp"
        android:textSize="@dimen/_18sp"
        android:textColor="@color/color_FF6C6C"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_1"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_home_menu_2"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:src="@mipmap/ic_home_menu_2"
        android:layout_marginTop="@dimen/_66dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_1"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="少儿素养"
        android:textSize="@dimen/_18sp"
        android:textColor="@color/color_07070D"
        android:layout_marginTop="@dimen/_4dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_2"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_home_menu_3"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:layout_marginTop="@dimen/_66dp"
        android:src="@mipmap/ic_home_menu_3"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_2"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:text="更多"
        android:textSize="@dimen/_18sp"
        android:textColor="@color/color_07070D"
        app:layout_constraintEnd_toEndOf="@+id/btn_home_menu_3"
        app:layout_constraintStart_toStartOf="@+id/btn_home_menu_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_menu_3" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>