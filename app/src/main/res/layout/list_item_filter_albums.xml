<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_16dp"
    android:layout_marginBottom="@dimen/_16dp"
    android:paddingStart="@dimen/_136dp"
    android:paddingEnd="@dimen/_136dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v_first"
        android:layout_width="@dimen/_466dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_album_cover"
            android:layout_width="@dimen/_106dp"
            android:layout_height="@dimen/_106dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_album_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_0A1A2A"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_album_cover"
            app:layout_constraintTop_toTopOf="@+id/iv_album_cover"
            tools:text="猴子警长探案及-第三季|侦探推理|宝宝巴" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/textView20"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_18dp"
            android:src="@mipmap/ic_album_play_count"
            app:layout_constraintBottom_toBottomOf="@+id/iv_album_cover"
            app:layout_constraintStart_toStartOf="@+id/tv_album_title" />

        <TextView
            android:id="@+id/tv_album_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_98999A"
            android:textSize="@dimen/_16sp"
            tools:text="20.6w"
            android:layout_marginStart="@dimen/_4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toEndOf="@+id/textView20"
            app:layout_constraintTop_toTopOf="@+id/textView20" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/textView22"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_18dp"
            android:layout_marginStart="@dimen/_24dp"
            android:src="@mipmap/ic_album_count"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintStart_toEndOf="@+id/tv_album_subscribe"
            app:layout_constraintTop_toTopOf="@+id/textView20" />

        <TextView
            android:id="@+id/tv_album_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="102集"
            android:layout_marginStart="@dimen/_4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView22"
            app:layout_constraintStart_toEndOf="@+id/textView22"
            app:layout_constraintTop_toTopOf="@+id/textView22" />

        <TextView
            android:id="@+id/tv_album_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="上学趣事一箩筐，轻松搞定写日记！"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/color_5E5F62"
            android:layout_marginBottom="@dimen/_4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView20"
            app:layout_constraintStart_toStartOf="@+id/tv_album_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v_second"
        android:layout_width="@dimen/_466dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_album_cover_2"
            android:layout_width="@dimen/_106dp"
            android:layout_height="@dimen/_106dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_album_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_0A1A2A"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_album_cover_2"
            app:layout_constraintTop_toTopOf="@+id/iv_album_cover_2"
            tools:text="猴子警长探案及-第三季|侦探推理|宝宝巴" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/textView20_2"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_18dp"
            android:src="@mipmap/ic_album_play_count"
            app:layout_constraintBottom_toBottomOf="@+id/iv_album_cover_2"
            app:layout_constraintStart_toStartOf="@+id/tv_album_title_2" />

        <TextView
            android:id="@+id/tv_album_subscribe_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_98999A"
            android:textSize="@dimen/_16sp"
            tools:text="20.6w"
            android:layout_marginStart="@dimen/_4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView20_2"
            app:layout_constraintStart_toEndOf="@+id/textView20_2"
            app:layout_constraintTop_toTopOf="@+id/textView20_2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/textView22_2"
            android:layout_width="@dimen/_18dp"
            android:layout_height="@dimen/_18dp"
            android:layout_marginStart="@dimen/_24dp"
            android:src="@mipmap/ic_album_count"
            app:layout_constraintBottom_toBottomOf="@+id/textView20_2"
            app:layout_constraintStart_toEndOf="@+id/tv_album_subscribe_2"
            app:layout_constraintTop_toTopOf="@+id/textView20_2" />

        <TextView
            android:id="@+id/tv_album_total_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="102集"
            android:layout_marginStart="@dimen/_4dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView22_2"
            app:layout_constraintStart_toEndOf="@+id/textView22_2"
            app:layout_constraintTop_toTopOf="@+id/textView22_2" />

        <TextView
            android:id="@+id/tv_album_desc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="上学趣事一箩筐，轻松搞定写日记！"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/color_5E5F62"
            android:layout_marginBottom="@dimen/_4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView20_2"
            app:layout_constraintStart_toStartOf="@+id/tv_album_title_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>