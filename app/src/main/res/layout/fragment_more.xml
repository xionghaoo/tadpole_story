<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.more.MoreFragment">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tl_more"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/_90dp"
        android:paddingTop="@dimen/_15dp"
        android:paddingBottom="@dimen/_15dp"
        android:layout_marginTop="@dimen/_48dp"
        android:orientation="horizontal"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="@color/color_FF9F00"
        app:stl_indicatorThickness="@dimen/_6dp"
        app:stl_indicatorWidth="@dimen/_46dp"
        app:stl_indicatorCornerRadius="@dimen/_3dp"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#4D000000"
        app:stl_underlineThickness="0dp"
        app:stl_dividerColor="#4D000000"
        app:stl_dividerThickness="0dp"
        app:stl_defaultTabBackground="?attr/selectableItemBackground"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="@color/color_tab_text"
        app:stl_defaultTabTextSize="@dimen/_28sp"
        app:stl_defaultTabTextHorizontalPadding="@dimen/_58dp"
        app:stl_defaultTabTextMinWidth="@dimen/_90dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="@dimen/_5dp"
        app:stl_drawDecorationAfterTab="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/color_divider"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_more"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>