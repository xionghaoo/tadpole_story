<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="xh.zero.tadpolestory">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".StoryApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TadpoleStory">
        <activity
            android:name=".ui.album.NowPlayingActivity"
            android:screenOrientation="userLandscape"
            android:exported="false" />
        <activity
            android:name=".ui.album.AlbumDetailActivity"
            android:screenOrientation="userLandscape"
            android:exported="false" />
        <activity
            android:name=".ui.DailyRecommendActivity"
            android:screenOrientation="userLandscape"
            android:exported="false" />
        <activity
            android:name=".test.TestActivity"
            android:exported="true"
            android:screenOrientation="userLandscape">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="userLandscape">
             <intent-filter>
                 <action android:name="android.intent.action.MAIN" />
                 <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        <activity
            android:name=".web.WebActivity"
            android:screenOrientation="userLandscape" />

        <service
            android:name=".repo.TadpoleMusicService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>
    </application>

</manifest>